{% extends 'base_back.html.twig' %}

    {% block body %}
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Table stock</h4>
                    
                    <div class="table-responsive" style="margin-top: 50px;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nom du stock</th>
                                    <th>Réference du produit</th>
                                    <th>Marque</th>
                                    <th>Quantités</th>
                                    <th>Nombre vendus</th>
                                    <th>Cout</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for s in stocks %}
                                    <tr>
                                        <td class="py-1">{{ s.nom }}</td>
                                        <td>{{ s.refProduit }}</td>
                                        <td>{{ s.marque }}</td>
                                        <td>{{ s.quantite }}</td>
                                        <td>{{ s.nbvendu }}</td>
                                        <td>{{ s.cout }}</td>
                                        <td>{{ s.cout }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
    
                      <div class="col-md-12" style="margin-top: 70px;">
                        <div class="card-body" style="text-align: center;">
                            <button type="button" class="btn btn-success btn-rounded btn-fw" style="margin-right: 10px; color: white; font-weight: bold;">Ajouter</button>
                            <button type="button" class="btn btn-warning btn-rounded btn-fw" style="margin-right: 10px; color: white; font-weight: bold;">Modifier</button>
                            <button type="button" class="btn btn-danger btn-rounded btn-fw" style="color: white; font-weight: bold;">Supprimer</button>
                        </div>
                        
                       </div>
                    
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    